<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Tvwatermaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="WaterMaster"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/IDConectaraDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="53dp"
        android:text="CONECTAR A DISPOSITIVO" />

    <ImageView
        android:id="@+id/IDimagen"
        android:layout_width="248dp"
        android:layout_height="218dp"
        android:layout_alignStart="@+id/Tvwatermaster"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="107dp"
        app:srcCompat="@drawable/aguancontelefono" />

</RelativeLayout>